{
  "name": "youtube-volume-scroll",
  "version": "2.0.0",
  "description": "Browser Extension that enables scrolling mousewheel to control volume on Youtube and Youtube Music",
  "main": "index.js",
  "scripts": {
    "manifest:add:gecko.id": "dot-json dist/manifest.json browser_specific_settings.gecko.id youtube-volume-scroll@github.com",
    "manifest:remove:gecko.id": "dot-json dist/manifest.json -d browser_specific_settings",
    "manifest:add:background-script": "dot-json dist/manifest.json background.scripts[0] background-script.js",
    "manifest:remove:background-script": "dot-json dist/manifest.json -d background",
    "pack": "cpy . ../dist --cwd=unpacked",
    "prebuild": "npm run sas && npm run pack && npm run check_no_pack",
    "build": "npm run build:firefox && npm run build:chromium",
    "postbuild": "del-cli dist",
    "build:firefox": "x-var web-ext build --filename=\"youtube-volume-scroll_%npm_package_version%_firefox.xpi\"",
    "prebuild:chromium": "npm run manifest:remove:gecko.id && npm run manifest:remove:background-script && del-cli dist/background-script.js",
    "build:chromium": "x-var web-ext build --filename=\"youtube-volume-scroll_%npm_package_version%_chromium.zip\"",
    "postbuild:chromium": "npm run manifest:add:gecko.id && npm run manifest:add:background-script",
    "release": "release-it",
    "publish": "gh workflow run publish.yml",
    "check_no_pack": "(eslint . && web-ext lint -w && remark .) || (del-cli dist && exit 1)",
    "check": "eslint . && npm run pack && web-ext lint -w && remark .",
    "postcheck": "del-cli dist",
    "sas": "sass --update unpacked/popup",
    "format": "remark . --output --frail && eslint . --fix && web-ext lint --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Araxeus/Youtube-Volume-Scroll.git"
  },
  "author": "Araxeus",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Araxeus/Youtube-Volume-Scroll/issues"
  },
  "homepage": "https://github.com/Araxeus/Youtube-Volume-Scroll#readme",
  "devDependencies": {
    "@release-it/bumper": "^4.0.2",
    "auto-changelog": "^2.4.0",
    "cpy-cli": "^4.2.0",
    "dot-json": "^1.2.2",
    "eslint": "^8.32.0",
    "release-it": "^15.6.0",
    "remark-cli": "^11.0.0",
    "remark-preset-lint-consistent": "^5.1.1",
    "remark-preset-lint-recommended": "^6.1.2",
    "sass": "^1.57.1",
    "web-ext": "^7.4.0",
    "x-var": "^0.0.1",
    "del-cli": "^5.0.0"
  },
  "overrides": {
    "addons-linter": "^5.26.0",
    "sign-addon": "^5.2.0"
  },
  "webExt": {
    "sourceDir": "dist",
    "ignoreFiles": [
      "./popup/*.scss",
      "./popup/*.map"
    ],
    "run": {
      "firefox": "nightly"
    },
    "lint": {
      "pretty": true
    },
    "build": {
      "overwriteDest": true
    }
  },
  "release-it": {
    "hooks": {
      "before:init": [
        "npm run check",
        "npm run build"
      ],
      "after:release": "echo Successfully released ${name} v${version} to ${repo.repository}."
    },
    "git": {
      "requireBranch": "main",
      "changelog": "npx auto-changelog --stdout --commit-limit false -u --template https://raw.githubusercontent.com/release-it/release-it/master/templates/changelog-compact.hbs"
    },
    "github": {
      "release": true,
      "draft": true,
      "web": true
    },
    "npm": {
      "publish": false
    }
  },
  "remarkConfig": {
    "settings": {
      "emphasis": "*",
      "strong": "*"
    },
    "plugins": [
      "remark-preset-lint-consistent",
      "remark-preset-lint-recommended"
    ]
  }
}
