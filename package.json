{
  "name": "youtube-volume-scroll",
  "version": "3.4.0",
  "description": "Browser Extension that enables scrolling mousewheel to control volume on Youtube and Youtube Music",
  "main": "index.js",
  "type": "module",
  "packageManager": "bun@1.3.6",
  "scripts": {
    "check": "bun scripts/check.js",
    "lint": "biome check --write",
    "format": "biome format --write",
    "release": "bun check --quiet && bun scripts/bumper.js && bun scripts/tag-and-commit.js",
    "publish": "gh workflow run publish.yml",
    "b": "bun scripts/build.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Araxeus/Youtube-Volume-Scroll.git"
  },
  "author": "Araxeus",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Araxeus/Youtube-Volume-Scroll/issues"
  },
  "homepage": "https://github.com/Araxeus/Youtube-Volume-Scroll#readme",
  "devDependencies": {
    "@biomejs/biome": "^2.3.14",
    "@inquirer/prompts": "^8.2.0",
    "@types/semver": "^7.7.1",
    "detect-indent": "^7.0.2",
    "globals": "^17.3.0",
    "sass": "^1.97.3",
    "semver": "^7.7.4",
    "vendorfiles": "^1.4.0",
    "web-ext": "^9.2.0"
  },
  "vendorConfig": {
    "vendorFolder": "./unpacked/popup/vendors"
  },
  "vendorDependencies": {
    "cooltipz": {
      "version": "v2.5.1",
      "repository": "https://github.com/jackdomleo7/Cooltipz.css",
      "files": [
        "cooltipz.min.css",
        "LICENSE"
      ]
    },
    "coloris": {
      "version": "v0.25.0",
      "repository": "https://github.com/mdbassit/Coloris",
      "files": [
        "dist/coloris.min.js",
        "dist/coloris.min.css",
        "LICENSE"
      ]
    }
  },
  "webExt": {
    "sourceDir": "dist",
    "ignoreFiles": [
      "./popup/*.scss",
      "./popup/*.map"
    ],
    "run": {
      "firefox": "nightly"
    },
    "lint": {
      "pretty": true
    },
    "build": {
      "overwriteDest": true
    }
  },
  "trustedDependencies": [
    "@biomejs/biome"
  ]
}
