{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "assist": { "actions": { "source": { "organizeImports": "on" } } },
  "files": {
    "includes": [
      "**",
      "!**/popup/vendors",
      "!node_modules",
      "!dist",
      "!unpacked/popup/popup.css"
    ]
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "arrowParentheses": "asNeeded"
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 4
  },
  "json": {
    "formatter": {
      "enabled": true,
      "indentStyle": "space",
      "indentWidth": 2
    },
    "linter": {
      "enabled": true
    }
  },
  "css": {
    "formatter": {
      "enabled": true,
      "indentStyle": "space",
      "indentWidth": 2,
      "lineWidth": 200
    },
    "linter": {
      "enabled": true
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "noUndeclaredVariables": "error",
        "noUnusedVariables": "error"
      },
      "complexity": {
        "noThisInStatic": "off",
        "noForEach": "off",
        "noImportantStyles": "off"
      },
      "suspicious": {
        "noAssignInExpressions": "off",
        "noDocumentCookie": "off",
        "useIterableCallbackReturn": "off"
      },
      "style": {
        "useNumberNamespace": "off"
      },
      "nursery": {
        "recommended": true
      }
    }
  }
}
